{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "disabledWorkspaceFolders": true,
            "filetypes": ["go"]
        },
        "crystal": {
            "command": "crystalline",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "crystal"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["rust"],
    "rust-analyzer.inlayHints.enable": true
}
